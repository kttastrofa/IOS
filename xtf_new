{
    if [ $FLT = "-a" ]; then
        awk
    elif [ $FLT = "-b" ]; then
        awk
    elif [ $FLT = "-c" ]; then
        awk
    fi
}

CMD_fun ()
{
    if [ $CMD = "list" ] || [ -z $CMD ]; then
        awk
    elif [ $CDM = "list-currency" ]; then
        awk
    elif [ $CMD = "status" ]; then
        awk
    elif [ $CMD = "profit" ]; then
        awk
    fi
}

