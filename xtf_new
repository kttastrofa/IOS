# [-h|--help] [FILTR] [PŘÍKAZ] UŽIVATEL LOG [LOG2 [...]]

if [ $1 = "-h" ] || [ $1 = "--help" ]; then
  echo "Hello!"
  echo "Here's some help:\n\n"
  echo "[-h|--help] [FILTR] [PŘÍKAZ] UŽIVATEL LOG [LOG2 [...]]"
  echo "'-h' or '--help' :   is what you can see right now :)"
  echo ""
  echo "for FILTR you can use:"
  echo "'-a [DATETIME]'      : returns every log after used [DATETIME]"
  echo "'-b [DATETIME]'      : returns every log before used [DATETIME]"
  echo "'-c [CURRENCY]'      : returns every log with used [CURRENCY]"
  echo ""
  echo "for PŘÍKAZ you can use:"
  echo "'list'                : returns list of every log of yours"
  echo "'list-currency'       : returns list of every currency in alphabetical order"
  echo "'status'              : returns list of every -- status of every currency you mantain"
  echo "'profit'              : returns list of every status of your currencies with the profit you made"
  echo "for UŽIVATEL use your name you had signed with"
  echo "for LOG use log"
  echo ""
  shift
  exit 0
fi

if [ "$1" = "-a" ] || [ "$1" = "-b" ] || [ "$1" = "-c" ]; then
    FLT=$1
